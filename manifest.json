{
  "manifest_version": 3,
  "name": "Hide YouTube Shorts Metapanel",
  "version": "1.1",
  "description": "Hides annoying metadata panel on YouTube Shorts.",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
